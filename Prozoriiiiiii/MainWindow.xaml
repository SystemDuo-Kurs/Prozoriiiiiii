<Window x:Class="Prozoriiiiiii.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prozoriiiiiii"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="800">
    <DockPanel>
        <Button DockPanel.Dock="Top" Background="Green" FontSize="34" Content="Blabla"/>
        <Button DockPanel.Dock="Right" Background="Blue" FontSize="34" Content="Blabla"/>
        <TextBox DockPanel.Dock="Bottom" Background="Purple" FontSize="52" Text="{Binding Path=Ime, UpdateSourceTrigger=PropertyChanged}"/>
        <Button DockPanel.Dock="Left" Background="Red" FontSize="34" Content="Blabla"/>
        <Label  FontSize="54" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding Path=Ime, UpdateSourceTrigger=PropertyChanged}"/>
    </DockPanel>
</Window>
